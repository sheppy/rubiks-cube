{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "semi": 2,
    "max-statements": [2, 16],
    "max-depth": [2, 5],
    "complexity": [2, 7],
    "max-len": [2, 120],
    "max-params": [2, 5],
    "max-nested-callbacks": [2, 1],
    "func-names": [2, "always"],

    "import-order/import-order": 2,
    "smells/no-switch": 1,
    "smells/no-complex-switch-case": 1,
    "smells/no-setinterval": 1,
    "smells/no-this-assign": 1,
    "smells/no-complex-string-concat": 1,
    "smells/no-complex-chaining": 0,
    "jsdoc/check-param-names": 0,
    "jsdoc/check-tag-names": 1,
    "jsdoc/check-types": 1,
    "jsdoc/newline-after-description": 1,
    "jsdoc/require-description-complete-sentence": 1,
    "jsdoc/require-hyphen-before-param-description": 1,
    "jsdoc/require-param": 1,
    "jsdoc/require-param-description": 1,
    "jsdoc/require-param-type": 1,
    "jsdoc/require-returns-description": 1,
    "jsdoc/require-returns-type": 1,

    "promise/param-names": 2,
    "promise/always-return": 2,
    "promise/catch-or-return": 2,
    "promise/no-native": 0,

    "import/no-unresolved": [2, {"commonjs": true, "amd": true, "ignore": ["pixi", "p2"]}],
    "import/named": 2,
    "import/namespace": 2,
    "import/default": 2,
    "import/export": 2
  },
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": [
    "no-inferred-method-name",
    "import-order",
    "smells",
    "jsdoc",
    "promise",
    "import"
  ]
}